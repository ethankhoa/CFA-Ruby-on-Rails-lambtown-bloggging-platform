<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<p>
  <strong>Email:</strong>
  <%= @post.user.email %>
</p>

<div class="fb-share-button" data-href="http://localhost" data-layout="button_count" data-size="large" data-mobile-iframe="true">
  <a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Flocalhost%2F&amp;src=sdkpreparse">Share</a>
</div>

<%= render 'comments/form', comment: @comment  %>

<% @comments.each do |comment| %>

<p><%= comment.user %> <%= comment.created_at %></p>
<p><%= comment.content %></p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
